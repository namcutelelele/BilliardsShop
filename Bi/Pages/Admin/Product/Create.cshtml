@page
@model Client.Pages.Admin.Product.CreateModel
@{
}
<style>
    .dropdown-menu {
        max-height: 200px;
        overflow-y: auto;
    }
</style>
<body class="bg-light">
    <div class="container mt-4">
        <h1 class="mb-4">Create Product</h1>
        <form method="post" enctype="multipart/form-data">
            <div class="card p-4 shadow-sm">
                <div class="mb-3 row">
                    <label for="id" class="col-sm-2 col-form-label">Id</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="id" name="Id">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="name" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="name" name="Name">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="category" class="col-sm-2 col-form-label">Category</label>
                    <div class="col-sm-10">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                Select Category
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                                @foreach (var category in Model.Categories)
                                {
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="selectCategory('@category.Id', '@category.Name')">@category.Name</a>
                                    </li>
                                }
                            </ul>
                            <input type="hidden" id="category" name="category">
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="brand" class="col-sm-2 col-form-label">Brand</label>
                    <div class="col-sm-10">
                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle" type="button" id="brandDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                Select Brand
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="brandDropdown">
                                @foreach (var brand in Model.Brands)
                                {
                                    <li>
                                        <a class="dropdown-item" href="#" onclick="selectBrand('@brand.Id', '@brand.Name')">@brand.Name</a>
                                    </li>
                                }
                            </ul>
                            <input type="hidden" id="brand" name="brand">
                        </div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="price" class="col-sm-2 col-form-label">Price</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="price" name="Price">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="unitInStock" class="col-sm-2 col-form-label">Unit In Stock</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="unitInStock" name="UnitsInStock">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="isAvailable" class="col-sm-2 col-form-label">Available</label>
                    <div class="col-sm-5">
                        <input type="checkbox" class="form-check-input" id="isAvailable" name="IsAvailable">
                        <label class="form-check-label" for="isAvailable">Available</label>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="description" class="col-sm-2 col-form-label">Description</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="description" name="Description">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="shortDescription" class="col-sm-2 col-form-label">Short Description</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="shortDescription" name="ShortDescription">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="weight" class="col-sm-2 col-form-label">Weight</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="weight" name="Weight">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="eraserSize" class="col-sm-2 col-form-label">Eraser Size</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="eraserSize" name="EraserSize">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="buttLength" class="col-sm-2 col-form-label">Butt Length</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="buttLength" name="ButtLength">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="shaftLength" class="col-sm-2 col-form-label">Shaft Length</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="shaftLength" name="ShaftLength">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="grip" class="col-sm-2 col-form-label">Grip</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="grip" name="Grip">
                    </div>
                </div>
                <div class="mb-3 row">
                    <label for="productImage1" class="col-sm-2 col-form-label">Product Image 1</label>
                    <div class="col-sm-10">
                        <input type="file" class="form-control" id="productImage1" name="productImage1" accept="image/*">
                    </div>
                </div>
                <div class="mb-3 row">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a href="/Admin/Product/Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
<script>
    function selectCategory(id, name) {
        document.getElementById('categoryDropdown').innerText = name;
        document.getElementById('category').value = id;
    }

    function selectBrand(id, name) {
        document.getElementById('brandDropdown').innerText = name;
        document.getElementById('brand').value = id;
    }
</script>
